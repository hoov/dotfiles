{
  "codeLens.enable": true,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "•",
  "diagnostic.hintSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.warningSign": "•",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.enableGutters": true,
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "languageserver": {
    "bash": {
      "args": [
        "start"
      ],
      "command": "bash-language-server",
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "dls": {
      "args": [
        "--stdio"
      ],
      "command": "diagnostic-languageserver",
      "filetypes": [
        "vim"
      ],
      "initializationOptions": {
        "filetypes": {
          "vim": "vint"
        },
        "linters": {
          "vint": {
            "args": [
              "--style-problem",
              "--enable-neovim",
              "--format",
              "{file_path}:{line_number}:{column_number}:{severity}: {description} (see {reference})",
              "-"
            ],
            "command": "vint",
            "debounce": 100,
            "formatLines": 1,
            "formatPattern": [
              "[^:]+:(\\d+):(\\d+):([^:]+):\\s*(.*$)",
              {
                "column": 2,
                "line": 1,
                "message": 4,
                "security": 3
              }
            ],
            "offsetColumn": 0,
            "offsetLine": 0,
            "securities": {
              "error": "error",
              "style_problem": "info",
              "warning": "warning"
            },
            "sourceName": "vint"
          }
        }
      }
    }
  },
  "python.formatting.provider": "black",
  // Microsoft's language server seems to be more responsive
  "python.jediEnabled": false,
  "python.linting.flake8Args": [
    "-m",
    "flake8"
  ],
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.asdf/shims/python",
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.timeout": 5000,
  "tsserver.reportStyleChecksAsWarnings": false
}
