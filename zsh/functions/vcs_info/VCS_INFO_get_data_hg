setopt localoptions NO_shwordsplit
local hgbranch hgbase

hgbase=${vcs_comm[basedir]}
rrn=${hgbase:t}
hgbranch=$(< ${hgbase}/.hg/branch)
VCS_INFO_formats '' "${hgbranch}" "${hgbase}" '' '' '' ''
return 0
