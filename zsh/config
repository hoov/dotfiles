export CLICOLOR=1
# I want Vim as my editor, but Emacs keybindings for zle
if [[ $OSTYPE == darwin* ]]; then
  if [[ -x $(which mvim) ]]; then
    export EDITOR='mvim -v'
  fi
else
  export EDITOR='vim'
fi
bindkey -e

export MAVEN_OPTS='-Xmx512m -XX:MaxPermSize=128m'
export ANT_OPTS='-Xmx1024m -XX:MaxPermSize=128m'
export P4CONFIG='.p4rc'

# Grep
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# Load up dircolors
if [[ $OSTYPE == darwin* ]]; then
  if [[ -x $(which gdircolors) ]]; then
    eval `gdircolors "$HOME/.dircolors"`
  fi
else
  eval `dircolors "$HOME/.dircolors"`
fi

## Load colors 
autoload colors zsh/terminfo 
if [[ "$terminfo[colors]" -ge 8 ]]; then 
    colors 
fi

# RVM Stuff
if [ -e "$HOME/.rvm/bin" ]; then
  PATH="$PATH:$HOME/.rvm/bin"
  export PATH
  export USE_BUNDLER=force
fi

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

# Prefer Homebrew Python
if [ -e "/usr/local/share/python" ]; then
  PATH="/usr/local/share/python:$PATH"
  export PATH
fi

if [ -e "$HOME/bin" ]; then
  PATH="$PATH:$HOME/bin"
  export PATH
fi

if [ -e "/usr/local/bin" ]; then
  PATH="/usr/local/bin:$PATH"
  export PATH
fi

if [ -e "/usr/local/sbin" ]; then
  PATH="/usr/local/sbin:$PATH"
  export PATH
fi

if [ -e "$HOME/.bin" ]; then
  PATH="$HOME/.bin:$PATH"
  export PATH
fi

[[ -s "$HOME/.tmuxinator/scripts/tmuxinator" ]] && source "$HOME/.tmuxinator/scripts/tmuxinator"

fpath=(~/.zsh/functions $fpath)
fpath=(~/.zsh/functions/vcs_info $fpath)
fpath=(~/.zsh/functions/vcs_info/Backends $fpath)

autoload -U ~/.zsh/functions/*(:t)
autoload -U ~/.zsh/functions/vcs_info*(:t)

REPORTTIME=10 # print elapsed time when more than 10 seconds

setopt NO_BG_NICE # don't nice background tasks
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt PROMPT_SUBST
setopt IGNORE_EOF

# Correction
setopt CORRECT
setopt CORRECT_ALL

# Directory behavior
setopt AUTO_CD
setopt AUTO_PUSHD
setopt PUSHD_IGNORE_DUPS

# History
HISTFILE=~/.zsh_history
HISTSIZE=5000
SAVEHIST=5000

setopt APPEND_HISTORY # adds history
setopt EXTENDED_HISTORY # add timestamps to history
setopt INC_APPEND_HISTORY  # adds history incrementally
setopt HIST_IGNORE_SPACE # ignore commands with leading spaces
setopt HIST_IGNORE_ALL_DUPS  # don't record dupes in history
setopt HIST_REDUCE_BLANKS
setopt HIST_VERIFY # verify history expansion commands
#setopt SHARE_HISTORY

zle -N newtab

bindkey -e
bindkey '^[^[[D' backward-word
bindkey '^[^[[C' forward-word
bindkey '^[[5D' beginning-of-line
bindkey '^[[5C' end-of-line
bindkey '^[[3~' delete-char
bindkey '^[^N' newtab
bindkey '^?' backward-delete-char 
bindkey '^f' history-incremental-search-backward

# vim: sw=2 ts=2 expandtab syntax=zsh
