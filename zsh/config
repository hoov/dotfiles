#fi

export CLICOLOR=1
export EDITOR='mate -w'
export GREP_OPTIONS='--color=auto'
export MAVEN_OPTS='-Xmx512m -XX:MaxPermSize=128m'
export ANT_OPTS='-Xmx1024m -XX:MaxPermSize=128m'
export P4CONFIG='.p4rc'
# Mac OS
#export LSCOLORS='exfxcxdxbxegedabagacad'
# Ubuntu
#export LS_COLORS='exfxcxdxbxegedabagacad'

## Load colors 
autoload colors zsh/terminfo 
if [[ "$terminfo[colors]" -ge 8 ]]; then 
    colors 
fi

## AVR GCC
if [ -e "/usr/local/CrossPack-AVR" ]; then
  PATH="$PATH:/usr/local/CrossPack-AVR/bin"
  export PATH
fi

if [ -e "$HOME/.rvm/bin" ]; then
  PATH="$PATH:$HOME/.rvm/bin"
  export PATH
fi

[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"

if [ -e "$HOME/bin" ]; then
  PATH="$PATH:$HOME/bin"
  export PATH
fi

fpath=(~/.zsh/functions $fpath)
fpath=(~/.zsh/functions/vcs_info $fpath)
fpath=(~/.zsh/functions/vcs_info/Backends $fpath)

autoload -U ~/.zsh/functions/*(:t)
autoload -U ~/.zsh/functions/vcs_info*(:t)

HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
REPORTTIME=10 # print elapsed time when more than 10 seconds

setopt NO_BG_NICE # don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt HIST_VERIFY
setopt EXTENDED_HISTORY # add timestamps to history
setopt PROMPT_SUBST
setopt CORRECT
setopt COMPLETE_IN_WORD
setopt IGNORE_EOF

setopt APPEND_HISTORY # adds history
setopt INC_APPEND_HISTORY  # adds history incrementally
setopt HIST_IGNORE_ALL_DUPS  # don't record dupes in history
setopt HIST_REDUCE_BLANKS

zle -N newtab

bindkey '^[^[[D' backward-word
bindkey '^[^[[C' forward-word
bindkey '^[[5D' beginning-of-line
bindkey '^[[5C' end-of-line
bindkey '^[[3~' delete-char
bindkey '^[^N' newtab
bindkey '^?' backward-delete-char 
bindkey '^f' history-incremental-search-backward
