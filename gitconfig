# vim: ft=gitconfig

[alias]
  co = checkout
  incoming = !git fetch && git log --pretty=oneline --abbrev-commit --graph --decorate ..@{u}
  outgoing = !git fetch && git log --pretty=oneline --abbrev-commit --graph --decorate  @{u}..
  patch = !git --no-pager diff --no-color
  up = pull --rebase --autostash
  vlog = log --pretty=oneline --abbrev-commit --graph --decorate
[apply]
  whitespace = nowarn
[color]
  ui = auto
[color "diff-highlight"]
  newHighlight = green bold 22
  newNormal = green bold
  oldHighlight = red bold 52
  oldNormal = red bold
[color "diff"]
  commit = yellow bold
  frag = magenta bold
  meta = yellow
  new = green bold
  old = red bold
  whitespace = red reverse
[commit]
  verbose = true
[core]
  autocrlf = false
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff] 
  colorMoved = zebra
  mnemonicprefix = true
  tool = kitty
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[fetch]
  prune = true
  pruneTags = true
[merge] 
  tool = araxis
[push]
  default = current
[rerere]
  enabled = 1
[status]
  submodulesummary = 1

[include]
  path = ~/.gitconfig.local

[includeIf "gitdir:~/src/clora/"]
  path = ~/src/clora/.gitconfig

[includeIf "gitdir:~/src/evisort/"]
  path = ~/src/evisort/.gitconfig
