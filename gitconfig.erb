[user]
    name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
    co = checkout
    incoming = !git fetch && git log --pretty=oneline --abbrev-commit --graph --decorate ..@{u}
    outgoing = !git fetch && git log --pretty=oneline --abbrev-commit --graph --decorate  @{u}..
    vlog = log --pretty=oneline --abbrev-commit --graph --decorate
[apply]
    whitespace = nowarn
[color]
    branch = auto
    decorate = auto
    diff = auto
    grep = auto
    status = auto
    ui = true
[core]
    editor = <%= ENV['EDITOR'] %>
    excludesfile = <%= ENV['HOME'] %>/.gitignore
[diff] 
    tool = araxis
    compactionHeuristic = 1
[merge] 
    tool = araxis
[push]
    default = matching
[status]
    submodulesummary = 1
